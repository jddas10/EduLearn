<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
        </shape>
    </item>
    <item android:top="-150dp" android:left="-150dp">
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:startColor="#1A00E5FF"
                android:endColor="#00000000" />
        </shape>
    </item>
    <item android:bottom="-100dp" android:right="-100dp">
        <shape android:shape="oval">
            <size android:width="350dp" android:height="350dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="175dp"
                android:startColor="#1A7C4DFF"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>