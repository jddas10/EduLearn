<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_quiz_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressStudentQuiz"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            app:indicatorColor="@color/neon_blue"
            app:trackColor="#1AFFFFFF"
            app:trackCornerRadius="10dp"
            app:trackThickness="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvStudentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 01/10"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/chip_glass_left"
                android:letterSpacing="0.04"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/tvStudentScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Score: 0"
                android:textColor="@color/neon_green"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/chip_score_green"
                android:letterSpacing="0.04"
                tools:ignore="HardcodedText" />


        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#0DFFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/glass_stroke"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvStudentQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="28dp"
                android:text="What is the speed of light in a vacuum?"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-light"
                tools:ignore="HardcodedText" />
        </com.google.android.material.card.MaterialCardView>

        <RadioGroup
            android:id="@+id/rgOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:divider="@android:color/transparent"
            android:showDividers="middle">

            <RadioButton
                android:id="@+id/rbOptionA"
                style="@style/StudentOptionStyle"
                android:text="Option A" />

            <RadioButton
                android:id="@+id/rbOptionB"
                style="@style/StudentOptionStyle"
                android:text="Option B" />

            <RadioButton
                android:id="@+id/rbOptionC"
                style="@style/StudentOptionStyle"
                android:text="Option C" />

            <RadioButton
                android:id="@+id/rbOptionD"
                style="@style/StudentOptionStyle"
                android:text="Option D" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNextQuestion"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Continue"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/background_dark"
            app:backgroundTint="@color/neon_blue"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textEnd"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvQuizCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="âœ… Quiz completed!"
            android:textColor="@color/neon_yellow"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@drawable/bottom_banner_glass"
            android:visibility="gone"
            tools:ignore="HardcodedText" />


    </LinearLayout>
    <!-- RESULT OVERLAY (show only when quiz completed) -->
    <FrameLayout
        android:id="@+id/resultOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="#B3000000">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="22dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EAF3FF"
            app:strokeWidth="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">



                <TextView
                    android:id="@+id/tvTrophy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ðŸ†"
                    android:textSize="48sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvCongrats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTrophy"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Congrats!"
                    android:textColor="#0F172A"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvPercentScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCongrats"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="90% Score"
                    android:textColor="#16A34A"
                    android:textStyle="bold"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/tvResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPercentScore"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Quiz completed successfully."
                    android:textColor="#334155"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvResultDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvResultTitle"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="You attempted 60 questions and 55 answer is correct."
                    android:textColor="#0F172A"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResultDone"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_below="@id/tvResultDetail"
                    android:layout_marginTop="16dp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#2563EB" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</RelativeLayout>