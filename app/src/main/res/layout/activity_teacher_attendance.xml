<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F17">

    <TextView
        android:id="@+id/tvTeacherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Œ Attendance QR"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etAttendanceTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Title (e.g. OS Lecture)"
        android:textColor="#FFFFFF"
        android:textColorHint="#9AA4B2"
        android:backgroundTint="#334155"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivQr"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/etAttendanceTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTeacherStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not started"
        android:textColor="#D9E3F0"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivQr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnStartAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="â–¶ Start"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#22C55E"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCloseAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="â¹ Close"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EF4444"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnStartAttendance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnExportCsv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="â¬‡ Export CSV"
        android:textStyle="bold"
        android:textColor="#0A0A0F"
        android:backgroundTint="#00E5FF"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnCloseAttendance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
