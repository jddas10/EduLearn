<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/splash_bg_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/bg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@drawable/splash_bg_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/halo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:alpha="0"
        android:background="@drawable/splash_halo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:contentDescription="@string/app_name"
        android:elevation="10dp"
        android:src="@drawable/ic_edulearn_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edulearn"
        android:textColor="@color/splash_text_primary"
        android:textSize="34sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn • Practice • Grow"
        android:textColor="@color/splash_text_secondary"
        android:textSize="14sp"
        android:letterSpacing="0.06"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/developerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:alpha="0.8"
        android:elevation="10dp"
        android:letterSpacing="0.08"
        android:text="Developed by Jaydatt Dave"
        android:textColor="@color/splash_text_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagline" />


    <View
        android:id="@+id/p1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:alpha="0"
        android:background="@drawable/splash_particle"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

    <View
        android:id="@+id/p2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:alpha="0"
        android:background="@drawable/splash_particle"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

    <View
        android:id="@+id/p3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:alpha="0"
        android:background="@drawable/splash_particle"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

    <View
        android:id="@+id/p4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:alpha="0"
        android:background="@drawable/splash_particle"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

    <View
        android:id="@+id/p5"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:alpha="0"
        android:background="@drawable/splash_particle"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

    <View
        android:id="@+id/p6"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:alpha="0"
        android:background="@drawable/splash_particle"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintEnd_toEndOf="@id/logoImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
