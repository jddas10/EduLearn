<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš™ï¸ App Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"/>

    <!-- Theme Toggle -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#2D4059"
        app:contentPadding="12dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnChangeTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒ“ Toggle Dark/Light Theme"
            android:backgroundTint="#81B29A"
            android:textColor="#1A2B3E"
            android:textStyle="bold"
            app:cornerRadius="8dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Login Box -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#2D4059"
        app:contentPadding="12dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Options"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <!-- GOOGLE LOGIN BUTTON -->
            <Button
                android:id="@+id/btnLoginGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Sign in with Google"
                android:backgroundTint="#DB4437"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                app:cornerRadius="8dp"/>

            <!-- EMAIL LOGIN (Optional) -->
            <Button
                android:id="@+id/btnLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Sign in with Email"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                app:cornerRadius="8dp"/>

            <!-- GUEST LOGIN -->
            <Button
                android:id="@+id/btnSignUpGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Sign Up or Continue as Guest"
                android:backgroundTint="#FFC107"
                android:textColor="#1A2B3E"
                android:textStyle="bold"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
